<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="@color/white" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white"  />
            <size android:width="15dp" android:height="15dp"/>

        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="#971E05" />
            <solid android:color="#58857e"/>
            <size android:width="15dp" android:height="15dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dp" />
            <stroke android:width="0.5dip" android:color="@color/teal_20" />
        <shape android:shape="oval"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dip" android:color="@color/teal_20" />
            <gradient android:angle="-90" android:startColor="@color/teal_20" android:endColor="@color/teal_20" />
            <size android:width="15dp" android:height="15dp"/>
        </shape>
    </item>

</selector>